{
  "family": "nextjs-app-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "nextjs-app",
      "image": "PLACEHOLDER_IMAGE",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ],
      "environment": [
        {
          "name": "MONGO_URI",
          "value": "arn:aws:secretsmanager:us-east-1:336215195718:secret:backend/MONGO_URI-6BP0MC"
        },
        {
          "name": "TOKEN_SECRET",
          "value": "arn:aws:secretsmanager:us-east-1:336215195718:secret:backend/JWT_SECRET-3hujGc"
        }
      ]
    }
  ],
  "executionRoleArn": "arn:aws:iam::<account-id>:role/ecsTaskExecutionRole"
}